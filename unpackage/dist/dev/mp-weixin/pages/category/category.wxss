.category .searchBOX {
  background-color: #fff;
  position: fixed;
  height: 10vh;
  z-index: 11;
  width: 100%;
}
.category .searchBOX .searchIpt {
    height: 50rpx;
    margin: 10px;
    width: 90%;
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
    -webkit-box-pack: center;
    -webkit-justify-content: center;
            justify-content: center;
    -webkit-box-align: center;

      color: #555;
}
.category .mian {
  padding-top: 10vh;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: horizontal;
  -webkit-box-direction: normal;
  -webkit-flex-direction: row;
          flex-direction: row;
}
.category .mian .menuBox {
    display: block;
    box-sizing: border-box;
    overflow-y: auto;
    height: 90vh;
    width: 20%;
    background-color: #f7f7f7;
    position: fixed;
}
.category .mian .menuBox .menu {
      padding: 16rpx 0;
      text-align: center;
}
.category .mian .menuBox .active {
      color: #0a7d7d;
      border-bottom: 1px solid #0a7d7d;
}
.category .mian .goods {
    width: 80%;
    position: relative;
    left: 200rpx;
}
.category .mian .goods .goodList {
      width: 100%;
}
.category .mian .goods .goodList .goodsItem_title_wrap {
        width: 100%;
}
.category .mian .goods .goodList .goodsItem_title_wrap .goodsItem_title {
          width: 100%;
          text-align: center;
}
.category .mian .goods .goodList .goodsChildrenWrap {
        display: grid;
        grid-template-columns: 1fr 1fr 1fr;
        box-sizing: border-box;
        padding: 10px 10px;
}
.category .mian .goods .goodList .goodsChildrenWrap .goodsChildren {
          display: -webkit-box;
          display: -webkit-flex;
          display: flex;
          -webkit-flex-wrap: wrap;
                  flex-wrap: wrap;
          -webkit-box-orient: vertical;
          -webkit-box-direction: normal;
          -webkit-flex-direction: column;
                  flex-direction: column;
          padding: 10rpx;
}
.category .mian .goods .goodList .goodsChildrenWrap .goodsChildren .goodsImg {
            width: 50px;
            height: 50px;
}

